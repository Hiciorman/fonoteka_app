<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fonoteka</title>
    <link rel="stylesheet" href="~/dist/vendor.css" asp-append-version="true" />
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/dist/site.css" asp-append-version="true" />
    </environment>
</head>

<body>
    <div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2016 - Fonoteka</p>
        </footer>
    </div>
    <script src="~/dist/vendor.js" asp-append-version="true"></script> @RenderSection("scripts", required: false)
</body>

</html>